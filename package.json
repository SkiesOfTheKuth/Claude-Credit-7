{
  "name": "@git-analyzer/root",
  "version": "0.1.0",
  "private": true,
  "description": "A powerful git repository analyzer providing insights into code evolution, team dynamics, and technical debt",
  "keywords": [
    "git",
    "analytics",
    "code-analysis",
    "repository-insights",
    "developer-tools"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "cli": "npm run start -w packages/cli"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
